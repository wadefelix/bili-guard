{
  "manifest_version": 2,
  "name": "bili-guard",
  "description": "屏蔽黑名单用户的视频",
  
  "version": "0.1",
  "default_locale": "en",
  "homepage_url": "https://github.com/wadefelix/bili-guard",

  "author": "Ren Wei",
  
  "content_scripts": [
    {
      "matches": ["https://*.bilibili.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "permissions": [
    "cookies",
    "*://*.bilibili.com"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }
}
